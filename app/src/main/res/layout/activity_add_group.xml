<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.www.goldmineproject.AddGroupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/groupParticCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Имя группы"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="371dp"
            android:layout_height="136dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="86dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" />
        </HorizontalScrollView>

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/horizontalScrollView"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/horizontalScrollView"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="Создать"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="428dp" />

        <Spinner
            android:id="@+id/groupParticSpinner"
            android:layout_width="232dp"
            android:layout_height="28dp"
            android:layout_alignEnd="@+id/horizontalScrollView"
            android:layout_alignRight="@+id/horizontalScrollView"
            android:layout_below="@+id/editGroupName"
            android:layout_marginTop="42dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/groupParticSpinner"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:text="Добавить:"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="37dp" />

        <EditText
            android:id="@+id/editGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="27dp"
            android:text="Участников: "
            android:textSize="24sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

